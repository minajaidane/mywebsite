---
layout: base
---


<div class="container container__articles">
    <article class="container__image">
        {% if img %}
            <img class="article__image" src="http://picsum.photos/1240/320" />
        {% else %}
            <img src="/static/images/fallback.jpg"/>
        {% endif %}
    </article>
 

    <article class="container wysiwyg">
           <h1>{{ title }}</h1>
    
        {{ content | safe }}
    </article>
</div>
    {% if  collections.work | length %}
        <section class="container">
            <h2>Other work:</h2>

            <ul>
                {% for article in collections.work %}
                    {% if article.url !== page.url %}
                        <li>
                            <a href="{{ article.url }}">
                                {{ article.data.title }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </section>
    {% endif %}
